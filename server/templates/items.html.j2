{%- extends "base.html.j2" %}
{%- set size = "-s" %}
{% block head %}
	<link rel="stylesheet" href="{{ url_for('static', filename='sortable-theme-minimal.css') }}">
	<script src="{{ url_for('static', filename='sortable.min.js') }}"></script>
{% endblock %}
{%- block main %}
<table data-sortable>
	<thead>
		<tr>
			<th>name</th>
			<th>description</th>
			<th data-sortable-type="numeric">cost</th>
			<th data-sortable-type="date">timestamp</th>
		</tr>
	</thead>
	<tbody>
		{% for item in stock %}
		<tr>
			<td><a href="/item/edit/{{ item.index }}">{{ item.item }}</a></td>
			<td>{{item.description}}</td>
			<td data-value="{{item.cost[1:]|replace(',','')}}">{{ item.cost }}</td>
			<td data-value="{{item.date_added}}">{{item.date_added}}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}
{% block footer %}
	{{- button("home", url="/logout", title="Logout")}}
	{% if all %}
	{{- button("pay", url="/sold", title="View Sold", color="blue")}}
	{% else %}
	{{- button("all", url="/stock/all", title="View All", color="brown")}}
	{% endif %}
	{{- button("add", url="/stock/add", title="Add", color="blue") }}
{% endblock %}
